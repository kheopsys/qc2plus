# =============================================================================
# 2QC+ Environment Variables Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file with real credentials to version control
# =============================================================================

# -----------------------------------------------------------------------------
# SLACK ALERTING CONFIGURATION
# -----------------------------------------------------------------------------
# Get your Slack webhook URL from: https://api.slack.com/messaging/webhooks
# Required if alerting.enabled_channels includes "slack"
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# -----------------------------------------------------------------------------
# EMAIL ALERTING CONFIGURATION
# -----------------------------------------------------------------------------
# Gmail App Password (not your regular password)
# How to get: https://support.google.com/accounts/answer/185833
EMAIL_PASSWORD=your_gmail_app_password_here

# SMTP Server (default for Gmail)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Sender email address
EMAIL_FROM=your-email@gmail.com

# Recipient email addresses (comma-separated)
EMAIL_TO_1=recipient1@example.com,recipient2@example.com

# -----------------------------------------------------------------------------
# MICROSOFT TEAMS ALERTING CONFIGURATION
# -----------------------------------------------------------------------------
# Get Teams webhook URL from: 
# Teams > Channel > Connectors > Incoming Webhook
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# -----------------------------------------------------------------------------
# DATABASE CONNECTIONS (OPTIONAL)
# -----------------------------------------------------------------------------
# Override database credentials from profiles.yml if needed

# PostgreSQL Data Source
POSTGRES_DATA_HOST=localhost
POSTGRES_DATA_PORT=5432
POSTGRES_DATA_USER=qc2plus
POSTGRES_DATA_PASSWORD=your_password
POSTGRES_DATA_DBNAME=qc2plus_demo
POSTGRES_DATA_SCHEMA=demo

# PostgreSQL Quality Results Database
POSTGRES_RESULTS_HOST=localhost
POSTGRES_RESULTS_PORT=5433
POSTGRES_RESULTS_USER=qc2plus
POSTGRES_RESULTS_PASSWORD=your_password
POSTGRES_RESULTS_DBNAME=qc2plus_results
POSTGRES_RESULTS_SCHEMA=qc2plus_results

# Snowflake (if using)
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=your_warehouse
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema
SNOWFLAKE_ROLE=your_role

# BigQuery (if using)
BIGQUERY_PROJECT=your-project-id
BIGQUERY_DATASET=your_dataset
BIGQUERY_KEYFILE_PATH=/path/to/service-account-key.json
BIGQUERY_LOCATION=US

# Redshift (if using)
REDSHIFT_HOST=your-cluster.region.redshift.amazonaws.com
REDSHIFT_PORT=5439
REDSHIFT_USER=your_username
REDSHIFT_PASSWORD=your_password
REDSHIFT_DBNAME=your_database
REDSHIFT_SCHEMA=your_schema


# -----------------------------------------------------------------------------
# SECURITY BEST PRACTICES
# -----------------------------------------------------------------------------
# 1. Never commit this file with real credentials
# 2. Use app-specific passwords for email (not your main password)
# 3. Rotate credentials regularly
# 4. Use environment-specific .env files (.env.dev, .env.prod)
# 5. Restrict file permissions: chmod 600 .env
# -----------------------------------------------------------------------------
